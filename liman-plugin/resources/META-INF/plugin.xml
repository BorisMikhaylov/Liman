<idea-plugin>
    <id>com.liman.annotations</id>
    <name>Liman</name>
    <version>1.0</version>
    <vendor email="boris.n.mikhaylov@gmail.com" url="https://github.com/BorisMikhaylov/Liman">Liman</vendor>

    <description>
        Limit annotation usages
        See https://github.com/BorisMikhaylov/Liman
    </description>

    <change-notes>
        version 1.0
    </change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html for description -->
    <idea-version since-build="210.0"/>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">

        <localInspection language="JAVA"
                         bundle="messages.LimanInspectionBundle"
                         key="inspection.name.mark.static"
                         groupPath="Java"
                         groupBundle="messages.LimanInspectionBundle"
                         groupKey="group.names.liman"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="org.liman.plugin.modifier.staticc.MarkStatic"/>
        <localInspection language="JAVA"
                         bundle="messages.LimanInspectionBundle"
                         key="inspection.name.mark.final"
                         groupPath="Java"
                         groupBundle="messages.LimanInspectionBundle"
                         groupKey="group.names.liman"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="org.liman.plugin.modifier.finall.MarkFinal"/>
        <localInspection language="JAVA"
                         bundle="messages.LimanInspectionBundle"
                         key="inspection.name.mark.mutable"
                         groupPath="Java"
                         groupBundle="messages.LimanInspectionBundle"
                         groupKey="group.names.liman"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="org.liman.plugin.modifier.finall.MarkMutable"/>
        <localInspection language="JAVA"
                         bundle="messages.LimanInspectionBundle"
                         key="inspection.name.mark.nonstatic"
                         groupPath="Java"
                         groupBundle="messages.LimanInspectionBundle"
                         groupKey="group.names.liman"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="org.liman.plugin.modifier.staticc.MarkNonStatic"/>
    </extensions>


</idea-plugin>